{
    "entryFile": "src/server.ts",
    "noImplicitAdditionalProperties": "throw-on-extras",
    "controllerPathGlobs": [
        "src/controllers/*.controller.ts"
    ],
    "spec": {
        "outputDirectory": "src/docs",
        "specVersion": 3,
        
        "securityDefinitions": { 
            "apiKeyAuth": {
                "type": "apiKey",
                "in": "header",
                "name": "Authorization"
            }
        }
    },
    "routes": {
        "routesDir": "src/routes/v1"
    },
    "multer": {
        "dest": "uploads/"
    },
    "compilerOptions": {
        "baseUrl": "./",
        "paths": {
            "@/*": [
                "*"
            ]
        }
    }
}